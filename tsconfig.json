{
    "compilerOptions": {
        "lib": [
            "es2021"
        ],
        "typeRoots": [
            "./node_modules/@types",
            "src/helper/types"
        ],
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@pages/*": ["src/pages/*"],
            "@components/*": ["src/components/*"],
            "@env": ["env.ts"],
            "@test-data/*": ["src/test-data/*"],
            "@helpers/*": ["src/helpers/*"],
            "@fixtures/*": ["src/fixtures/*"]
        }
    }
}